<rules lang="ca-ES" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd">
   <category name="B) Variants regionals" default="on"  type="locale-violation">
        <!-- Evita formes no valencianes -->
        <rulegroup id="EXIGEIX_VERBS_CENTRAL" name="Exigeix formes verbals del català central">
            <rule>
                <pattern>
                    <token postag="V.{6}[VBZ34567]" postag_regexp="yes"><exception postag="V.{6}[0CXY12]|_possible_nompropi|N.*|AQ.*|SPS00|RG" postag_regexp="yes"/><exception regexp="yes">vinga|aviam</exception></token>
                </pattern>
                <message>Useu formes verbals generals.</message>
                <suggestion><match no="1" postag="(V.+)." postag_regexp="yes" postag_replace="$1[CXY012]"/></suggestion>
                <example type="incorrect" correction="pensi|penso">Jo ho <marker>pense</marker>.</example>
                <example type="incorrect" correction="Digui">"<marker>Diga</marker> el que digui".</example>
                <example type="incorrect" correction="sobri|sobro">Que no li <marker>sobre</marker> res.</example>
                <!-- <example type="incorrect" correction="sobri|sobro">Que <marker>sobre</marker> una mica de fang.</example> -->
                <example type="correct">No es va poder encendre mai.</example>
                <example type="correct">Visc a la muntanya</example>
                <example type="correct">un mosaic d’exotismes digne de veure</example>
                <example type="correct">l'aeroport de Mais-Grate</example>
                <example type="incorrect" correction="diguin">Que ells ho <marker>diguen</marker>.</example>
                <example type="incorrect" correction="vagi">Que se'n <marker>vaja</marker>.</example>
                <example type="correct">Que ells ho diguin.</example>
                <example type="correct">Cal que sàpiguen com va.</example>
                <example type="correct">Vinga música!</example>
                <example type="correct">Vinga cantar!</example>
                <example type="incorrect" correction="diguis">Que els ho <marker>digues</marker>, ho faran.</example>
                <example type="incorrect" correction="siguis">Quan hi <marker>sigues</marker>, truca'm.</example>
                <example type="correct">Sigues sensat.</example>
                <example type="correct">Digues què penses.</example>
                <example type="incorrect" correction="siguis">Quan <marker>sigues</marker> allà</example>
                <example type="incorrect" correction="diguis">No m'importa res del que <marker>digues</marker></example>
                <example type="correct">Vull que sàpigues això.</example>
                <example type="correct">Li hauria agradat que ho fes.</example>
                <example type="correct">Garraf, temes sobre els quals redactà memòries</example>
                <example type="incorrect" correction="Porti"><marker>Porte</marker>'n tres.</example>
                <example type="correct">Sàpiga que és així.</example>
                <example type="correct">Obre'm, germana meva</example>
                <example type="correct">Pren-ne</example>
                <example type="correct">La capital és Cape Coast.</example>
                <example type="incorrect" correction="Digui"><marker>Diga</marker>'n tres.</example>
                <example type="incorrect" correction="Vagi"><marker>Vaja</marker> on vulgui.</example>
                <example type="correct">Vaja, com li agrada.</example>
                <example type="correct">Vine-te'n.</example>
                <example type="correct">Retorça't.</example>
                <example type="incorrect" correction="cantés">Si ell <marker>cantara</marker>.</example>
                <example type="correct">Ell haguera vingut, si li ho haguessis dit.</example>
                <example type="correct">La il·lusió que li amara el cor.</example>
                <example type="correct">que li regira l'estómac</example>
                <example type="correct">Maria Barbara Bach</example>
                <example type="correct">Ferrara, província de l'Emília-Romanya,</example>
                <example type="incorrect" correction="cantessin">Si ells <marker>cantassen</marker>.</example>
                <example type="incorrect" correction="cantessin">Si ells <marker>cantessen</marker>.</example>
                <example type="correct">Si travesses aigües profundes</example>
                <example type="incorrect" correction="pateixi">Que no <marker>patisca</marker>.</example>
                <example type="correct">que visqueu santament</example>
                <example type="incorrect" correction="pateixo">Jo <marker>patesc</marker>.</example>
                <example type="incorrect" correction="obro">Jo no <marker>òbric</marker>.</example>
                <example type="incorrect" correction="pateix">Ell <marker>patix</marker>.</example>
                <example type="correct">Ell reïx.</example>
                <example type="correct">sobreïxen.</example>
                <example type="correct">Els cotxes ixen.</example>
                <example type="correct">no naixen</example>
                <example type="correct">Ell usa un sistema Unix.</example>
                <example type="correct">Rue de la Paix</example>
                <example type="incorrect" correction="extraient">Va <marker>extraent</marker>.</example>
                <example type="incorrect" correction="veiem">No ho <marker>veem</marker>.</example>
                <example type="incorrect" correction="creient">Se'n va <marker>creent</marker> que sí.</example>
                <example type="correct">nosaltres creem, vosaltres creeu</example>
                <example type="correct">Jaieu.</example>
                <!-- balears -->    
                <example type="incorrect" correction="pateixi">Que no <marker>patesqui</marker>.</example>
                <example type="incorrect" correction="Fes"><marker>Fé</marker>-li això.</example>
                <example type="incorrect" correction="féu">Li ho <marker>fé</marker> ell.</example>
                <example type="incorrect" correction="feu">Quan <marker>faceu</marker> això.</example>
                <example type="correct">Que no <marker>pateixi</marker>.</example>
                <example type="incorrect" correction="cantéssim">Que no <marker>cantàssim</marker>.</example>
                <example type="correct">Que no cantéssim.</example>
                <example type="correct">que no passin ni lassin</example>
                <example type="correct">No t'escarrassis.</example>
                <example type="incorrect" correction="penso">Jo <marker>pens</marker>.</example>
                <example type="correct">Jo penso, dic i faig.</example>
                <example type="correct">Déu me'n guard!</example>
                <example type="correct">Déu lo guard!</example>
                <example type="correct">acompanyat de Picol</example>
                <example type="correct">Cristian Cirici i Alomar.</example>
                <example type="correct">Lluc Capsigrany.</example>
                <example type="correct">Fou tres cops campió mundial</example>
                <example type="correct">Obtingué per primer cop cristalls d'insulina</example>
                <!-- <example type="correct">Doctor enginyer industrial</example>
                <example type="correct">cas Frares</example> -->
                <example type="incorrect" correction="desatraco">Jo <marker>desatrac</marker>.</example>
                <example type="incorrect" correction="Anem"><marker>Anam</marker> a la ciutat</example>
                <example type="incorrect" correction="canteu">Vosaltres <marker>cantau</marker>.</example>
                <example type="correct">No escau fer-ho així.</example>
                <example type="correct">Vosaltres canteu.</example>
                <example type="correct">Vam, finalment, pensa que sí.</example>
                <example type="correct">i Adoram, fill d'Abdà,</example>
                <example type="incorrect" correction="incorres"><marker>incorrs</marker>.</example>
                <example type="correct">contendria.</example> <!-- és de contenir i contendre -->
                <example type="incorrect" correction="entretindria"><marker>entretendria</marker>.</example>
                <example type="incorrect" correction="concorre|concorro"><marker>concorr</marker>.</example>
                <example type="incorrect" correction="vingui"><marker>véngui</marker>.</example>
                <example type="incorrect" correction="convingui"><marker>convengui</marker>.</example>
                <example type="correct">corro</example>
                <!-- balears i valencianes-->
                <example type="incorrect" correction="pateixo">Jo <marker>patesc</marker>.</example>
                <example type="incorrect" correction="pensés">Que no <marker>pensàs</marker>.</example>
                <example type="correct">Escàs de pèl</example>
                <example type="correct">Tomàs sap la resposta</example>
                <example type="correct">Que no em trairàs</example>
                <example type="correct">El fill de Dèquer s'estava a Macàs</example>
                <example type="incorrect" correction="mereixo">Que jo no <marker>meresc</marker>.</example>
                <example type="incorrect" correction="sento">Jo <marker>sent</marker> que sí.</example>
                <example type="correct">Ell sent que sí.</example>
                <example type="correct">Més tard, ho va aconseguir.</example>
                <example type="correct">Demano que el tema es resolgui de pressa.</example>
            </rule>
        </rulegroup> 
