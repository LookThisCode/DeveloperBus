<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F6F6F6">
       
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="262dp"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="178dp"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/fotoProveedor"
                    android:layout_width="144dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.39"
                    android:src="@drawable/photo" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="0.7"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre:" />

                <TextView
                    android:id="@+id/ubicacion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="UbicaciÃ³n:" />

                <RatingBar
                    android:id="@+id/prov_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/btn_suscribir"
                    android:layout_width="256dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:src="@drawable/suscribir" />

                <ImageView
                    android:id="@+id/vermas"
                    android:layout_width="256dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="7"
                    android:adjustViewBounds="true"
                    android:src="@drawable/vermas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>
    
    </LinearLayout>
</LinearLayout>