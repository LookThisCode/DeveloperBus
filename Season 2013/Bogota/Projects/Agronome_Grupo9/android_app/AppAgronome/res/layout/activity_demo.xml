<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".DemoActivity" >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            	android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_weight="1"
                android:src="@drawable/graphic"
                android:scaleType="fitStart">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center|bottom"
                android:text="Deseas pertenecer a nuestra comunidad?"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/brought_by"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center|top"
                android:text="Ingresa aquÃ­ para conocer las ventajas y unirte."
                android:textSize="14sp"
                android:autoLink="web" />

            <ImageView
                android:id="@+id/btn_acceder"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/botonacceder" >

            </ImageView>
            
            <ImageView
                android:id="@+id/btn_registro"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/botonregistro" >

            </ImageView>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>