
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#96FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:text="Nickname/"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="Selecciona una categoría"
            android:textColor="#F05A28"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/deseos" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEncabezadoProducto"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:background="@drawable/encabe_proyecto"
        android:gravity="right" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvDeseasCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="¿Que deseas para tu" />

            <AutoCompleteTextView
                android:id="@+id/acProducto"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:background="#FFFFFF" >

                <requestFocus />
            </AutoCompleteTextView>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="31dp"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-80dp"
        android:src="@drawable/volver_deseos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Presupuesto"
                android:textColor="#1b75bb"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal"
                android:src="@drawable/help" />

        </LinearLayout>

        <EditText
            android:id="@+id/etPresupuesto"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Materiales"
                android:textColor="#1b75bb"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal"
                android:src="@drawable/help" />

        </LinearLayout>

        <EditText
            android:id="@+id/etMateriales"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Colores"
                android:textColor="#1b75bb"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal"
                android:src="@drawable/help" />

        </LinearLayout>

        <EditText
            android:id="@+id/etColores"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Dimensiones del lugar"
                android:textColor="#1b75bb"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal"
                android:src="@drawable/help" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/etDimeLargo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Largo"
                android:inputType="number" />

            <EditText
                android:id="@+id/etDimenAncho"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Ancho"
                android:inputType="number" />

        </LinearLayout>
        
        <Button
            android:id="@+id/btnEnviarDeseo"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/enviar"
            android:text="Enviar"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </LinearLayout>

    

</LinearLayout>
