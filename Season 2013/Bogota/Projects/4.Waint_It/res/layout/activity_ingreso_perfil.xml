<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logonube" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Hay quienes buscan cumplir eso que deseas"
        android:textColor="#04344C"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_gravity="center"
        android:layout_marginTop="65dp" >

        <Button
            android:id="@+id/btnDesea"
            android:layout_width="85dp"
            android:layout_height="34dp"
            android:background="@drawable/acceso_dos"
            android:text="@string/desea"
            android:textColor="#fff"
            android:textSize="19sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnOferta"
            android:layout_width="85dp"
            android:layout_height="34dp"
            android:background="@drawable/acceso_uno"
            android:text="@string/oferta"
            android:textColor="#fff"
            android:textSize="19sp"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>